<div class="container mt-4">
  <h2>アニメを記録する</h2>

  <%= form_with model: @post, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :title, "アニメ題名", class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :status, "視聴状況", class: "form-label" %>
      <%= form.select :status, [["みた", "watched"], ["みたい", "want_to_watch"]], {}, class: "form-select" %>
    </div>

    <div class="mb-3">
      <label class="form-label d-block">評価</label>
      <div class="star-rating">
        <% [5, 4, 3, 2, 1].each do |num| %>
          <%= form.radio_button :rating, num, id: "star#{num}" %>
          <label for="star<%= num %>">★</label>
        <% end %>
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :content, "感想", class: "form-label" %>
      <%= form.text_area :content, class: "form-control", rows: 5 %>
    </div>

    <%= form.submit "投稿する", class: "btn btn-primary" %>
  <% end %>
</div>
<h1>ログイン画面</h1>

<%= form_with url: login_path do |form| %>
  <div>
    <%= form.label :email_address, "メールアドレス" %>
    <%= form.email_field :email_address, required: true %>
  </div>

  <div>
    <%= form.label :password, "パスワード" %>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.submit "ログイン" %>
  </div>
<% end %>

<br>
<%= link_to "新規登録はこちら", new_user_path %>